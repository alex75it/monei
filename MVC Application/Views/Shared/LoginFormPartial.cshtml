@*@model Monei.MvcApplication.Models.LoginModel*@

<section style="width:350px;" id="loginPanel">
<h2>Use a local account to log in</h2>


	<div class="form-group">
		<label for="username">Username</label>
		<input type="text" id="username" class="form-control" />
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input type="text" id="password" class="form-control" />
	</div>
	<div class="form-group">
		<div class="checkbox">
			<input type="checkbox"> <label>Remember me</label>
		</div>
	</div>
	<div class="form-group" style="margin-top:2em">
		<input type="submit" value="log in" class="btn btn-primary" style="width:100%" />
	</div>
	
	<p style="margin-top:2em">
		<strong>@Html.ActionLink("Register", "Register") </strong>if you don't have an account.
	</p>
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
{
	@Html.AntiForgeryToken();
	@Html.ValidationSummary(true);

}

</section>